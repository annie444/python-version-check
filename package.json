{
  "name": "python-version-check",
  "description": "A GitHub Action to check Python version compatibility.",
  "version": "2.0.0",
  "author": "Annie Ehler <annie.ehler.4@gmail.com>",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/annie444/python-version-check",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/annie444/python-version-check.git"
  },
  "bugs": {
    "url": "https://github.com/annie444/python-version-check/issues"
  },
  "keywords": [
    "actions"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "scripts": {
    "bundle": "pnpm run format:write && pnpm run package",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "local-action": "@github/local-action . src/main.ts .env",
    "package": "parcel build",
    "package:watch": "parcel watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest",
    "all": "pnpm run format:write && pnpm run lint && pnpm run test && pnpm run coverage && pnpm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/http-client": "^2.2.3",
    "js-toml": "^1.0.2",
    "@actions/exec": "^1.1.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@github/local-action": "^6.0.0",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "make-coverage-badge": "^1.2.0",
    "parcel": "^2.16.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "ts-jest": "^29.4.4",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.3"
  }
}
